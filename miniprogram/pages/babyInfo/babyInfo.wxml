<view class="container">
  <form bindsubmit="formSave">
    <view class="section">
      <view class="section_title">宝贝生日</view>
      <picker mode="date" value="{{date}}" start="2000-01-01" bindchange="bindDateChange">
        <view class="picker">
          {{birthday}}
        </view>
      </picker>
      <view class="arrow"></view>
    </view>
    <view class="section">
      <view class="section_title">宝贝昵称</view>
      <input class="weui-input" placeholder="请输入宝贝昵称" placeholder-style="color:#999" />
    </view>
    <view class="section">
      <view class="section_title">宝贝性别</view>
      <radio-group class="radio-group" bindchange="radioChange">
        <radio class="radio" wx:for-items="{{gender}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
          <text>{{item.value}}</text>
        </radio>
      </radio-group>
    </view>
    <view class="section">
      <view class="section_title">出生体重</view>
      <picker mode="multiSelector" value="{{weight}}" bindchange="bindWeightChange" range="{{weightArray}}">
        <view class="picker">
          {{weight}}
        </view>
      </picker>
    </view>
    <view class="section">
      <view class="section_title">出生身高</view>
      <picker mode="multiSelector" value="{{height}}" bindchange="bindHeightChange" range="{{heightArray}}">
        <view class="picker">
          {{height}}
        </view>
      </picker>
    </view>
    <view class="section">
      <view class="section_title">出生孕周</view>
      <picker mode="multiSelector" value="{{gestational}}" bindchange="bindGestationalChange" range="{{gestationalArray}}">
        <view class="picker">
          {{gestational}}
        </view>
      </picker>
      <view class="arrow"></view>
    </view>
    <view class="btn-area">
      <button formType="submit">保存</button>
    </view>
  </form>
</view>